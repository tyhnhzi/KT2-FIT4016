@page
@model ResendEmailConfirmationModel
@{
    ViewData["Title"] = "Gửi lại email xác thực";
}

<div class="row justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="col-md-6 col-lg-5 fade-in-up">
        <div class="glass-card">
            <h2 class="text-center font-weight-bold mb-4">Xác thực tài khoản</h2>
            <p class="text-center text-white-50 small mb-4">Vui lòng nhập email để hệ thống gửi lại mã xác nhận.</p>
            
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                
                <div class="mb-4">
                    <label asp-for="Input.Email" class="form-label small text-uppercase opacity-75">Email đăng ký</label>
                    <input asp-for="Input.Email" class="form-control" aria-required="true" placeholder="vidu@gmail.com" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <button type="submit" class="btn btn-glass w-100 shadow-lg" style="padding: 1rem;">GỬI LẠI MÃ</button>
                </div>

                <div class="text-center border-top border-light border-opacity-10 pt-4 mt-2">
                    <a asp-page="./Login" class="small fw-bold text-decoration-none">Quay lại Đăng nhập</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
