@page
@model PickleballClub.Pages.Bookings.IndexModel
@using PickleballClub.Models

@{
    ViewData["Title"] = "Đặt sân";
}

<div class="glass-card mt-4 fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4 text-center w-100">
        <h2 class="font-weight-bold mb-0">Lịch đặt sân</h2>
        @if (User.IsInRole("Admin") || User.IsInRole("Member"))
        {
            <a asp-page="Create" class="btn btn-glass">Đặt sân mới</a>
        }
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Người đặt</th>
                    <th>Sân</th>
                    <th>Ngày & Giờ Bắt đầu</th>
                    <th>Kết thúc</th>
                    <th>Nội dung</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Bookings) {
                    <tr>
                        <td class="fw-bold">@item.Member?.FullName</td>
                        <td><span class="badge bg-secondary">@item.Court?.Name</span></td>
                        <td class="small">@item.StartTime.ToString("dd/MM HH:mm")</td>
                        <td class="small">@item.EndTime.ToString("HH:mm")</td>
                        <td class="text-light opacity-75 small">@item.Notes</td>
                        <td>
                            @if (item.Status == BookingStatus.Confirmed)
                            {
                                <span class="badge badge-confirmed">Confirmed</span>
                            }
                            else if (item.Status == BookingStatus.Cancelled)
                            {
                                <span class="badge bg-danger">Cancelled</span>
                            }
                            else
                            {
                                <span class="badge badge-pending">Pending</span>
                            }
                        </td>
                        <td class="text-end">
                            @if (User.IsInRole("Admin"))
                            {
                                @if(item.Status == BookingStatus.Pending) {
                                    <form method="post" asp-page-handler="Confirm" asp-route-id="@item.Id" class="d-inline me-1">
                                        <button type="submit" class="btn btn-sm btn-success" title="Duyệt nhanh"><i class="bi bi-check-lg"></i></button>
                                    </form>
                                }
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1"><i class="bi bi-pencil"></i></a>
                                <a asp-page="./Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}
