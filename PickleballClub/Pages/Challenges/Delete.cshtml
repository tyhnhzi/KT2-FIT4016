@page
@model PickleballClub.Pages.Challenges.DeleteModel

@{
    ViewData["Title"] = "Xóa Chiến dịch";
}

<div class="glass-card mt-4 fade-in-up">
    <div class="text-center mb-4">
        <h2 class="font-weight-bold text-danger mb-2">Xác nhận xóa Chiến dịch</h2>
        <div class="text-white-50">Bạn có chắc chắn muốn xóa Kèo/Giải đấu này không? Hành động này không thể hoàn tác.</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-card p-4 border border-danger border-opacity-25" style="background: rgba(220, 53, 69, 0.05);">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-white-50">Tiêu đề</dt>
                    <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Challenge.Title)</dd>

                    <dt class="col-sm-4 text-white-50">Loại hình</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Challenge.Type) - @Html.DisplayFor(model => model.Challenge.GameMode)</dd>

                    <dt class="col-sm-4 text-white-50">Trạng thái</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Challenge.Status)</dd>

                    <dt class="col-sm-4 text-white-50">Lệ phí</dt>
                    <dd class="col-sm-8 text-info">@Model.Challenge.EntryFee.ToString("N0")đ</dd>
                </dl>

                <form method="post" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="Challenge.Id" />
                    <a asp-page="./Index" class="btn btn-outline-light px-4">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger px-4 shadow-sm">Xóa vĩnh viễn</button>
                </form>
            </div>
        </div>
    </div>
</div>
