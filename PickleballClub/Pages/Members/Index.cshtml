@page
@model PickleballClub.Pages.Members.IndexModel

@{
    ViewData["Title"] = "Danh sách Hội viên";
}

<div class="glass-card mt-4 fade-in-up">
    <div class="d-flex justify-content-between align-items-center mb-4 text-center w-100">
        <h2 class="font-weight-bold mb-0">Danh sách Hội viên</h2>
    </div>

    <div class="table-responsive">
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Họ tên</th>
                    <th>Trình độ (DUPR)</th>
                    <th>Trạng thái</th>
                    <th class="text-end">Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Members) {
                    <tr>
                        <td class="fw-bold">
                            @Html.DisplayFor(modelItem => item.FullName)
                        </td>
                        <td>
                            <span class="fs-5 fw-800 me-2" style="color: var(--accent-color);">@item.RankLevel.ToString("0.0")</span>
                            @if (item.RankLevel >= 5.0)
                            {
                                <span class="badge badge-pro">PRO</span>
                            }
                            else if (item.RankLevel < 2.0)
                            {
                                <span class="badge badge-newbie">Newbie</span>
                            }
                        </td>
                        <td>
                            @if (item.Status == "Active")
                            {
                                <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 px-3">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger bg-opacity-10 text-danger border border-danger border-opacity-25 px-3">Inactive</span>
                            }
                        </td>
                        <td class="text-end">
                            <a asp-page="./Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1">Chi tiết</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning">Sửa</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
