@page
@model PickleballClub.Pages.News.DeleteModel

@{
    ViewData["Title"] = "Xóa Tin tức";
}

<div class="glass-card mt-4 fade-in-up">
    <div class="text-center mb-4">
        <h2 class="font-weight-bold text-danger mb-2">Xác nhận xóa</h2>
        <div class="text-white-50">Bạn có chắc chắn muốn xóa bài viết này?</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-card p-4 border border-danger border-opacity-25" style="background: rgba(220, 53, 69, 0.05);">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-white-50">Tiêu đề</dt>
                    <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.News.Title)</dd>

                    <dt class="col-sm-3 text-white-50">Ngày đăng</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(model => model.News.PostedDate)</dd>
                    
                    <dt class="col-sm-12 text-white-50 mt-3 mb-2">Xem trước nội dung:</dt>
                    <dd class="col-sm-12 fst-italic opacity-75 border-start border-3 border-light ps-3">
                        @if(Model.News.Content.Length > 100) 
                        {
                            @Model.News.Content.Substring(0, 100) <text>...</text>
                        }
                        else 
                        {
                            @Model.News.Content
                        }
                    </dd>
                </dl>

                <form method="post" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="News.Id" />
                    <a asp-page="./Index" class="btn btn-outline-light px-4">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger px-4 shadow-sm">Xóa bài viết</button>
                </form>
            </div>
        </div>
    </div>
</div>
