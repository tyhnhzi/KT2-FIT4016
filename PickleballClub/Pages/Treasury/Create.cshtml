@page
@model PickleballClub.Pages.Treasury.CreateModel

@{
    ViewData["Title"] = "Ghi nhận Giao dịch";
}

<div class="glass-card mt-4 mx-auto" style="max-width: 600px;">
    <h2>Ghi nhận Giao dịch mới</h2>

    <form method="post">
        <div class="mb-3">
            <label asp-for="Transaction.CategoryId" class="form-label">Danh mục</label>
            <select asp-for="Transaction.CategoryId" class="form-select bg-dark border-secondary text-white" asp-items="ViewBag.Categories">
                <option value="">-- Chọn danh mục --</option>
            </select>
        </div>

        <div class="mb-3">
            <label asp-for="Transaction.Amount" class="form-label">Số tiền (đ)</label>
            <input asp-for="Transaction.Amount" type="number" class="form-control bg-dark border-secondary text-white" />
        </div>

        <div class="mb-4">
            <label asp-for="Transaction.Description" class="form-label">Mô tả / Ghi chú</label>
            <textarea asp-for="Transaction.Description" class="form-control bg-dark border-secondary text-white" rows="3"></textarea>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-page="Index" class="btn btn-outline-light px-4 d-flex align-items-center" style="border-radius: 12px; border-color: rgba(255,255,255,0.2) !important;">
                <i class="bi bi-arrow-left me-2"></i> Quay lại
            </a>
            <button type="submit" class="btn btn-glass px-5">Lưu giao dịch</button>
        </div>
    </form>
</div>
