@page
@model PickleballClub.Pages.Treasury.DeleteModel

@{
    ViewData["Title"] = "Xóa Giao dịch";
}

<div class="glass-card mt-4 fade-in-up">
    <div class="text-center mb-4">
        <h2 class="font-weight-bold text-danger mb-2">Xác nhận xóa giao dịch</h2>
        <div class="text-white-50">Bạn có chắc chắn muốn xóa giao dịch này không?</div>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="glass-card p-4 border border-danger border-opacity-25" style="background: rgba(220, 53, 69, 0.05);">
                <dl class="row mb-0">
                    <dt class="col-sm-4 text-white-50">Ngày giao dịch</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Transaction.TransactionDate)</dd>

                    <dt class="col-sm-4 text-white-50">Danh mục</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Transaction.TransactionCategory.CategoryName)</dd>

                    <dt class="col-sm-4 text-white-50">Mô tả</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Transaction.Description)</dd>

                    <dt class="col-sm-4 text-white-50">Số tiền</dt>
                    <dd class="col-sm-8 fw-bold text-info">@Model.Transaction.Amount.ToString("N0")đ</dd>
                </dl>

                <form method="post" class="mt-4 d-flex justify-content-between">
                    <input type="hidden" asp-for="Transaction.Id" />
                    <a asp-page="./Index" class="btn btn-outline-light px-4">Hủy bỏ</a>
                    <button type="submit" class="btn btn-danger px-4 shadow-sm">Xóa giao dịch</button>
                </form>
            </div>
        </div>
    </div>
</div>
