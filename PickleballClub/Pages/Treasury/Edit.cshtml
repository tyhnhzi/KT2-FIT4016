@page
@model PickleballClub.Pages.Treasury.EditModel

@{
    ViewData["Title"] = "Chỉnh sửa Giao dịch";
}

<h1>Chỉnh sửa Giao dịch</h1>

<h4>Giao dịch</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Transaction.Id" />
            
            <div class="form-group mb-3">
                <label asp-for="Transaction.CategoryId" class="control-label">Danh mục</label>
                <select asp-for="Transaction.CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
                <span asp-validation-for="Transaction.CategoryId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="Transaction.Amount" class="control-label">Số tiền</label>
                <input asp-for="Transaction.Amount" class="form-control" />
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Transaction.Description" class="control-label">Mô tả</label>
                <input asp-for="Transaction.Description" class="form-control" />
                <span asp-validation-for="Transaction.Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                <a asp-page="./Index" class="btn btn-secondary">Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
